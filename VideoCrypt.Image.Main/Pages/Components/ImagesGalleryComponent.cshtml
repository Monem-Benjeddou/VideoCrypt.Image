
<div class="container-fluid tm-container-content tm-mt-60">
    <div class="row mb-4">
        <h2 class="col-6 tm-text-primary">Image Gallery</h2>
        <div class="col-6 d-flex justify-content-end align-items-center">
            <h4 class="tm-text-primary">
                Page @Model.CurrentPage of @Model.TotalPages
            </h4>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <form asp-action="Search" method="post" class="form-inline">
                <input type="text" name="searchQuery" class="form-control mr-sm-2" placeholder="Search" value="@Model.SearchQuery" />
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <ul class="list-group">
                @if (Model.Images != null && Model.Images.Any())
                {
                    foreach (var imageUrl in Model.Images)
                    {
                        var uri = new Uri(imageUrl);
                        var fileName = System.IO.Path.GetFileName(uri.LocalPath);
                        var fileNameWithoutExtension = System.IO.Path.GetFileNameWithoutExtension(fileName);
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <span>@fileNameWithoutExtension</span>
                                <div>
                                    <button class="btn btn-primary" onclick="viewImage('@imageUrl')">View</button>
                                    <button class="btn btn-danger" onclick="deleteImage('@imageUrl')">Delete</button>
                                </div>
                            </div>
                        </li>
                    }
                }
                else
                {
                    <li class="list-group-item text-center">No images found.</li>
                }
            </ul>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            @{
                var previous = Model.CurrentPage - 1;
                var next = Model.CurrentPage + 1;
            }
            <a class="btn btn-primary" href="@Url.Action("Index", new { page = previous, searchQuery = Model.SearchQuery })" @(Model.CurrentPage == 1 ? "disabled" : "")>Previous Page</a>
            <div class="pagination">
                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <a class="btn @(Model.CurrentPage == i ? "btn-primary" : "btn-outline-primary")" href="@Url.Action("Index", new { page = i, searchQuery = Model.SearchQuery })">@i</a>
                }
            </div>
            <a class="btn btn-primary" href="@Url.Action("Index", new { page = next, searchQuery = Model.SearchQuery })" @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")>Next Page</a>
        </div>
    </div>
</div>

<script>
    function viewImage(url) {
        // Open image modal
    }

    function deleteImage(url) {
        // Delete image logic
    }
</script>
